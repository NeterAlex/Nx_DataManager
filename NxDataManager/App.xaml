<Application x:Class="NxDataManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NxDataManager"
             xmlns:converters="clr-namespace:NxDataManager.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
                <ResourceDictionary Source="Animations/Animations.xaml"/>
                <ResourceDictionary Source="Styles/ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 字体定义 - Segoe Fluent Icons -->
            <FontFamily x:Key="FluentIcons">Segoe Fluent Icons</FontFamily>
            
            <!-- 渐变画刷定义 -->
            <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2196F3" Offset="0"/>
                <GradientStop Color="#1976D2" Offset="1"/>
            </LinearGradientBrush>
            
            <!-- 主色调画刷 -->
            <SolidColorBrush x:Key="Primary100" Color="#E3F2FD"/>
            <SolidColorBrush x:Key="Primary200" Color="#BBDEFB"/>
            <SolidColorBrush x:Key="Primary300" Color="#90CAF9"/>
            <SolidColorBrush x:Key="Primary400" Color="#42A5F5"/>
            <SolidColorBrush x:Key="Primary500" Color="#2196F3"/>
            <SolidColorBrush x:Key="Primary600" Color="#1E88E5"/>
            <SolidColorBrush x:Key="Primary700" Color="#1976D2"/>
            <SolidColorBrush x:Key="Primary800" Color="#1565C0"/>
            
            <!-- 基础画刷定义 -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="#1976D2"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#42A5F5"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
            <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6"/>
            
            <!-- 背景和表面 -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#F8FAFC"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#F1F5F9"/>
            
            <!-- 边框和分割线 -->
            <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
            <SolidColorBrush x:Key="DividerBrush" Color="#CBD5E1"/>
            
            <!-- 文本颜色 -->
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1E293B"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B"/>
            <SolidColorBrush x:Key="TextTertiaryBrush" Color="#94A3B8"/>
            <SolidColorBrush x:Key="TextDisabledBrush" Color="#CBD5E1"/>
            
            <!-- 交互状态 -->
            <SolidColorBrush x:Key="HoverBrush" Color="#42A5F5"/>
            <SolidColorBrush x:Key="PressedBrush" Color="#1976D2"/>
            <SolidColorBrush x:Key="FocusBrush" Color="#2196F3"/>
            <SolidColorBrush x:Key="DisabledBrush" Color="#E2E8F0"/>
            
            <!-- 阴影颜色 - 作为 Color 资源，用于 DropShadowEffect -->
            <Color x:Key="ShadowColor">#1E293B</Color>
            
            <!-- 转换器 -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
            <converters:NotManualScheduleConverter x:Key="NotManualScheduleConverter"/>
            <converters:ScheduleTypeDisplayConverter x:Key="ScheduleTypeDisplayConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:BytesToGBConverter x:Key="BytesToGBConverter"/>
            <converters:BytesToMBConverter x:Key="BytesToMBConverter"/>
            <converters:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <converters:ConnectionTypeToIndexConverter x:Key="ConnectionTypeToIndexConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
