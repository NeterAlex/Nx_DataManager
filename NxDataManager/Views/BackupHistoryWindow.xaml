<Window x:Class="NxDataManager.Views.BackupHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NxDataManager.ViewModels"
        xmlns:models="clr-namespace:NxDataManager.Models"
        mc:Ignorable="d"
        Title="备份历史" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <!-- 状态颜色转换器 -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <!-- 状态图标样式 -->
        <Style x:Key="StatusIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource FluentIcons}"/>
            <Setter Property="FontSize" Value="20"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Completed">
                    <Setter Property="Text" Value="&#xE73E;"/>
                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Failed">
                    <Setter Property="Text" Value="&#xE711;"/>
                    <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                    <Setter Property="Text" Value="&#xE711;"/>
                    <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Running">
                    <Setter Property="Text" Value="&#xE768;"/>
                    <Setter Property="Foreground" Value="{DynamicResource InfoBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- 图标按钮样式 -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="{StaticResource FluentIcons}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 卡片阴影样式 -->
        <Style x:Key="CardShadow" TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}" 
                                      BlurRadius="8" ShadowDepth="2" 
                                      Opacity="0.1" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryGradientBrush}" Padding="20,4">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE823;" FontFamily="{StaticResource FluentIcons}"
                               FontSize="24" Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="备份历史" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="&#xE72C;" Style="{StaticResource IconButton}"
                            Command="{Binding RefreshCommand}"
                            ToolTip="刷新" Margin="4,0"/>
                    <Button Content="&#xE8E5;" Style="{StaticResource IconButton}"
                            Command="{Binding ExportToCsvCommand}"
                            ToolTip="导出为 CSV" Margin="4,0"/>
                    <Button Content="&#xE8A5;" Style="{StaticResource IconButton}"
                            Command="{Binding ExportToPdfCommand}"
                            ToolTip="导出为 PDF" Margin="4,0"/>
                    <Button Content="&#xE774;" Style="{StaticResource IconButton}"
                            Command="{Binding ExportToHtmlCommand}"
                            ToolTip="导出为 HTML" Margin="4,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 统计卡片 -->
        <Grid Grid.Row="1" Margin="24,20,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 总记录数 -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="12" Padding="20" Margin="0,0,8,0"
                    Style="{StaticResource CardShadow}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="&#xE823;" FontFamily="{StaticResource FluentIcons}"
                                   FontSize="24" Foreground="{DynamicResource Primary500}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="总记录" FontSize="14" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TotalHistories}" FontSize="32" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- 成功数 -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="12" Padding="20" Margin="0,0,8,0"
                    Style="{StaticResource CardShadow}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="&#xE73E;" FontFamily="{StaticResource FluentIcons}"
                                   FontSize="24" Foreground="{DynamicResource SuccessBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="成功" FontSize="14" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding SuccessCount}" FontSize="32" FontWeight="Bold"
                               Foreground="{DynamicResource SuccessBrush}"/>
                </StackPanel>
            </Border>

            <!-- 失败数 -->
            <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="12" Padding="20" Margin="0,0,8,0"
                    Style="{StaticResource CardShadow}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="&#xE711;" FontFamily="{StaticResource FluentIcons}"
                                   FontSize="24" Foreground="{DynamicResource ErrorBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="失败" FontSize="14" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding FailureCount}" FontSize="32" FontWeight="Bold"
                               Foreground="{DynamicResource ErrorBrush}"/>
                </StackPanel>
            </Border>

            <!-- 总大小 -->
            <Border Grid.Column="3" Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="12" Padding="20" Margin="0,0,8,0"
                    Style="{StaticResource CardShadow}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="&#xE8B7;" FontFamily="{StaticResource FluentIcons}"
                                   FontSize="24" Foreground="{DynamicResource InfoBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="总大小" FontSize="14" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock FontSize="32" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F1} GB">
                                <Binding Path="TotalBackupSize" Converter="{StaticResource BytesToGBConverter}"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- 平均速度 -->
            <Border Grid.Column="4" Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="12" Padding="20"
                    Style="{StaticResource CardShadow}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="&#xE9F9;" FontFamily="{StaticResource FluentIcons}"
                                   FontSize="24" Foreground="{DynamicResource WarningBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="平均速度" FontSize="14" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock FontSize="32" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F1} MB/s">
                                <Binding Path="AverageSpeed"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 筛选区域 -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="12" Padding="20" Margin="24,20,24,0"
                Style="{StaticResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 第一行：快速时间筛选 -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="&#xE787;" FontFamily="{StaticResource FluentIcons}"
                               FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="快速筛选:" FontSize="14" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                    
                    <Button Content="全部" Command="{Binding SelectTimeRangeCommand}" 
                            CommandParameter="全部" Style="{StaticResource SecondaryButton}"
                            Height="36" MinWidth="80" Margin="0,0,8,0"/>
                    <Button Content="今天" Command="{Binding SelectTimeRangeCommand}" 
                            CommandParameter="今天" Style="{StaticResource SecondaryButton}"
                            Height="36" MinWidth="80" Margin="0,0,8,0"/>
                    <Button Content="本周" Command="{Binding SelectTimeRangeCommand}" 
                            CommandParameter="本周" Style="{StaticResource SecondaryButton}"
                            Height="36" MinWidth="80" Margin="0,0,8,0"/>
                    <Button Content="本月" Command="{Binding SelectTimeRangeCommand}" 
                            CommandParameter="本月" Style="{StaticResource SecondaryButton}"
                            Height="36" MinWidth="80" Margin="0,0,8,0"/>
                    <Button Content="最近7天" Command="{Binding SelectTimeRangeCommand}" 
                            CommandParameter="最近7天" Style="{StaticResource SecondaryButton}"
                            Height="36" MinWidth="80" Margin="0,0,8,0"/>
                    <Button Content="最近30天" Command="{Binding SelectTimeRangeCommand}" 
                            CommandParameter="最近30天" Style="{StaticResource SecondaryButton}"
                            Height="36" MinWidth="80"/>
                </StackPanel>

                <!-- 第二行：高级筛选 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 搜索框 -->
                    <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Height="40" FontSize="14" Margin="0,0,12,0"
                             Padding="8" VerticalContentAlignment="Center"
                             Background="{DynamicResource SurfaceVariantBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding ApplyFiltersCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- 任务筛选 -->
                    <ComboBox Grid.Column="1" ItemsSource="{Binding TaskNames}"
                              SelectedItem="{Binding SelectedTaskFilter}"
                              Height="40" FontSize="14" Margin="0,0,12,0"/>

                    <!-- 状态筛选 -->
                    <ComboBox Grid.Column="2" SelectedItem="{Binding SelectedStatusFilter}"
                              Height="40" FontSize="14" Margin="0,0,12,0">
                        <ComboBoxItem Content="全部状态"/>
                        <ComboBoxItem Content="已完成" Tag="Completed"/>
                        <ComboBoxItem Content="失败" Tag="Failed"/>
                        <ComboBoxItem Content="已取消" Tag="Cancelled"/>
                    </ComboBox>

                    <!-- 清除筛选 -->
                    <Button Grid.Column="3" Content="清除筛选" 
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Height="40" MinWidth="100"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 历史列表 - 简化版 -->
        <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="12" Margin="24,20,24,20"
                Style="{StaticResource CardShadow}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredHistories}" Padding="20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SurfaceVariantBrush}"
                                    CornerRadius="8" Padding="16" Margin="0,0,0,12"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="HistoryItem_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 状态图标 -->
                                    <TextBlock Grid.Column="0" Style="{StaticResource StatusIconStyle}"
                                               VerticalAlignment="Top" Margin="0,0,12,0"/>

                                    <!-- 内容 -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding TaskName}" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding StartTime, StringFormat='yyyy/MM/dd HH:mm'}" 
                                                   FontSize="12" 
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <!-- 统计 -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <TextBlock Text="{Binding SuccessFiles}" FontSize="14" FontWeight="Bold"
                                                   Foreground="{DynamicResource SuccessBrush}" Margin="0,0,4,0"/>
                                        <TextBlock Text="/" FontSize="14" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding TotalFiles}" FontSize="14" Margin="0,0,16,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- 底部状态栏 -->
        <Border Grid.Row="4" Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="24,12">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE946;" FontFamily="{StaticResource FluentIcons}"
                               FontSize="16" Foreground="{DynamicResource InfoBrush}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <ProgressBar IsIndeterminate="True" Height="4" 
                             HorizontalAlignment="Right" Width="200"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
